<link rel="stylesheet" href="../stylesheets/sellingapp.css">

<style>
    span{
        color: blue;
        font-size: 0.5 rem;
    }

    .nav{
        width: 100%;
        height: 5rem;
        display: flex;
        justify-content: start;
        align-items: center;
    }

    a{
        color: black;
        text-decoration: none;
        margin: 0 4.5rem;
        text-transform: capitalize;
    }


</style>
    
    <div class="nav">
        <a href="/">homepage</a>

        <% if(isLoggedInVal){ %>
        
            <a href="/logout">logout</a>
        <% } %>

    </div>
    
    
    
    <div id="container">
    
        <h1>All Selling Cars</h1>
        <div id="posts">
            
            <%cars.reverse().forEach((car)=>{%>

                <div class="post">
                    <img src=<%=car.carImageUrl%> alt="some image">
                    <h3><%=car.name%></h3>
                    <h3><%=car.price%></h3>
                    <h3>Contact Number: <span><%=car.contact%></span></h3>
                </div>

            <%})%>
            
            
        </div>

        <article class="next-page">    
          
        <a href=<%="/sell/"+(shownPage+1) %> >Next Page</a>
            
        </article>

    </div>

    <h2></h2>

</body>
</html>